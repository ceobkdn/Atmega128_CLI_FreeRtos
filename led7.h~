#ifndef LED7_H_
#define LED7_H_




/******************************************************************************/
/***************************** Include Files **********************************/
/******************************************************************************/
#include <delay.h>
#include <mega128.h>
#include "main.h"
    

/******************************************************************************/
/********************** Macros and Constants Definitions **********************/
/******************************************************************************/
#define FND1 2
#define FND2 3
#define FND3 4
#define FND4 5
#define FND1_ON (1<<FND1)
#define FND2_ON (1<<FND2)
#define FND3_ON (1<<FND3)
#define FND4_ON (1<<FND4)
#define FND1_OFF (0<<FND1)
#define FND2_OFF (0<<FND2)
#define FND3_OFF (0<<FND3)
#define FND4_OFF (0<<FND4)


/******************************************************************************/
/************************** Functions declaration    **************************/
/******************************************************************************/
void Led7Init(void);
void Led7Disp(int value);
void Led7Disp1(int value);


#endif // SW_H_



