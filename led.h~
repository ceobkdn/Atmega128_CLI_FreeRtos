#ifndef SW_H_
#define SW_H_




/******************************************************************************/
/***************************** Include Files **********************************/
/******************************************************************************/
#include <delay.h>
#include <mega128.h>
#include "main.h"
    

/******************************************************************************/
/********************** Macros and Constants Definitions **********************/
/******************************************************************************/
enum LedEnum
{
 Led0,
 Led1,
 Led2,
 Led3,
 Led4,
 Led5,
 Led6,
 Led7,
};

/******************************************************************************/
/************************** Functions declaration    **************************/
/******************************************************************************/
void LedTurn(void);
void LedOn(enum LedEnum led);
void LedOff(enum LedEnum led);



#endif // SW_H_